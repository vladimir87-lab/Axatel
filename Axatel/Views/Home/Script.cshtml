@model List<Script>
@using Axatel.Models
@{
    ViewBag.Title = "Script";
    string idmemb = ViewBag.Memb;
    int count = Model.Count;
    int index = 0;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Скрипты телефонии Axatel</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


</head>
<body class="body-content" style="width: 630px;height: 540px; padding:0px;">

    <div style="text-align: center;">
        
        @foreach (var item in Model)
        {
            index++;
            if (index == count)
            {<span><a href="/script/@idmemb/@item.Id">@item.Title</a></span> }
            else
            {
            <span><a href="/script/@idmemb/@item.Id">@item.Title</a></span><span> | </span>
            }

        }

    </div>
    <div style="height: 550px; margin-top: 10px; border-top: 1px solid #e6e6e6;padding-left: 25px;">
        @Html.Raw(ViewBag.Text.ToString());
    </div>
</body>
</html>

